{
  "scripts": {
    "start": "npm run build && npm run watch",
    "build": "npm run compile-js & npm run compile-css",
    "watch": "npm run watch-css && npm run watch-js",
    "production": "npm run compile-css-prod & compile-js-prod",
    "compile-css": "sass ./src/scss/styles.scss ./dist/css/styles.css",
    "compile-css-prod": "sass ./src/scss/styles.scss ./dist/css/styles.css --no-source-map --style=compressed",
    "watch-css": "sass --watch ./src/scss/styles.scss ./dist/css/styles.css",
    "compile-js": "rollup ./src/js/scripts.js --file ./dist/js/scripts.js --format iife",
    "watch-js": "rollup ./src/js/scripts.js --file ./dist/js/scripts.js --format iife --watch",
    "compile-js-prod": "rollup ./src/js/scripts.js --file ./dist/js/scripts.js --format iife --compact"
  },
  "devDependencies": {
    "rollup": "^2.63.0",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.47.0"
  },
  "dependencies": {
    "yarn": "^1.22.17"
  }
}
